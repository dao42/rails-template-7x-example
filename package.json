{
  "name": "app",
  "private": true,
  "devDependencies": {
    "esbuild": "^0.25.5"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "postcss ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css && postcss ./app/assets/stylesheets/admin.css -o ./app/assets/builds/admin.css",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext css --exec \"npm run build:css\""
  },
  "dependencies": {
    "@rails/actioncable": "^8.0.201",
    "@rails/activestorage": "^8.0.200",
    "@rails/ujs": "^7.1.3-4",
    "alpinejs": "^3.14.9",
    "autoprefixer": "^10.4.21",
    "daisyui": "^4.12.24",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.17"
  },
  "browserslist": [
    "defaults"
  ]
}
