<div class="container mx-auto px-4 py-6">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Orders Management</h1>
      <p class="text-base-content/70">Track and manage customer orders</p>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="bg-base-100 p-4 rounded-lg shadow mb-6">
    <%= form_with url: admin_orders_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |form| %>
      <!-- Search -->
      <div class="form-control">
        <%= form.text_field :search, 
            placeholder: "Search orders, customers, or books...", 
            value: params[:search],
            class: "input input-bordered" %>
      </div>
      
      <!-- Status Filter -->
      <div class="form-control">
        <%= form.select :status, 
            [
              ['All Statuses', ''],
              ['Pending', 'pending'],
              ['Paid', 'paid'],
              ['Failed', 'failed'],
              ['Cancelled', 'cancelled']
            ], 
            { selected: params[:status] },
            { class: "select select-bordered" } %>
      </div>
      
      <!-- Date From -->
      <div class="form-control">
        <%= form.date_field :date_from, 
            value: params[:date_from],
            class: "input input-bordered",
            placeholder: "From date" %>
      </div>
      
      <!-- Date To -->
      <div class="form-control">
        <%= form.date_field :date_to, 
            value: params[:date_to],
            class: "input input-bordered",
            placeholder: "To date" %>
      </div>
      
      <!-- Submit -->
      <div class="form-control md:col-span-2">
        <%= form.submit "Search", class: "btn btn-outline" %>
      </div>
      
      <!-- Clear -->
      <div class="form-control md:col-span-2">
        <%= link_to "Clear Filters", admin_orders_path, class: "btn btn-ghost" %>
      </div>
    <% end %>
  </div>

  <!-- Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="stat bg-primary text-primary-content rounded-lg">
      <div class="stat-title text-primary-content/70">Total Orders</div>
      <div class="stat-value"><%= @total_orders %></div>
    </div>
    <div class="stat bg-success text-success-content rounded-lg">
      <div class="stat-title text-success-content/70">Completed</div>
      <div class="stat-value"><%= @completed_orders %></div>
    </div>
    <div class="stat bg-info text-info-content rounded-lg">
      <div class="stat-title text-info-content/70">Total Revenue</div>
      <div class="stat-value">$<%= @total_revenue %></div>
    </div>
    <div class="stat bg-accent text-accent-content rounded-lg">
      <div class="stat-title text-accent-content/70">Average Order</div>
      <div class="stat-value">
        $<%= @completed_orders > 0 ? (@total_revenue / @completed_orders).round(2) : 0 %>
      </div>
    </div>
  </div>

  <!-- Orders Table -->
  <div class="bg-base-100 rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Book</th>
            <th>Customer</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="font-mono">#<%= order.id %></td>
              <td>
                <div class="flex items-center gap-3">
                  <div class="avatar">
                    <div class="w-12 h-16 rounded">
                      <%= image_tag order.book.cover_image_url, alt: order.book.title, class: "object-cover" %>
                    </div>
                  </div>
                  <div>
                    <div class="font-bold"><%= truncate(order.book.title, length: 30) %></div>
                    <div class="text-sm text-base-content/70">by <%= order.book.author %></div>
                  </div>
                </div>
              </td>
              <td>
                <div class="font-bold"><%= order.customer_name %></div>
                <div class="text-sm text-base-content/70"><%= order.customer_email %></div>
              </td>
              <td class="font-bold">$<%= order.total_amount %></td>
              <td>
                <div class="badge <%= order.paid? ? 'badge-success' : order.pending? ? 'badge-warning' : order.failed? ? 'badge-error' : 'badge-ghost' %>">
                  <%= order.status.upcase %>
                </div>
              </td>
              <td class="text-sm">
                <div><%= order.created_at.strftime("%Y-%m-%d") %></div>
                <div class="text-base-content/50"><%= order.created_at.strftime("%H:%M") %></div>
              </td>
              <td>
                <div class="flex gap-2">
                  <%= link_to admin_order_path(order), class: "btn btn-ghost btn-xs" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  <% end %>
                  
                  <% if order.pending? %>
                    <%= form_with url: admin_order_path(order), method: :patch, local: true, class: "inline" do |form| %>
                      <%= form.hidden_field :status, value: 'paid' %>
                      <%= form.submit "Mark Paid", 
                          class: "btn btn-success btn-xs",
                          data: { confirm: "Mark this order as paid?" } %>
                    <% end %>
                  <% end %>
                  
                  <%= link_to admin_order_path(order), 
                      method: :delete,
                      data: { 
                        confirm: "Are you sure you want to delete this order? This action cannot be undone." 
                      },
                      class: "btn btn-ghost btn-xs text-error" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <% if @orders.empty? %>
      <div class="text-center py-12 text-base-content/50">
        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
        </svg>
        <h3 class="text-lg font-bold mb-2">No orders found</h3>
        <p>No orders match your current filters.</p>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="flex justify-center mt-6">
    <%= paginate @orders %>
  </div>
</div>