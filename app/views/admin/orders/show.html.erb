<div class="container mx-auto px-4 py-6">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Order #<%= @order.id %></h1>
      <p class="text-base-content/70">
        Created <%= time_ago_in_words(@order.created_at) %> ago
        <% if @order.purchased_at %>
          â€¢ Paid <%= time_ago_in_words(@order.purchased_at) %> ago
        <% end %>
      </p>
    </div>
    <div class="flex gap-2">
      <% if @order.pending? %>
        <%= form_with url: admin_order_path(@order), method: :patch, local: true, class: "inline" do |form| %>
          <%= form.hidden_field :status, value: 'paid' %>
          <%= form.submit "Mark as Paid", 
              class: "btn btn-success",
              data: { confirm: "Mark this order as paid and reduce stock?" } %>
        <% end %>
      <% end %>
      
      <%= link_to admin_orders_path, class: "btn btn-outline" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Orders
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Order Status -->
    <div class="lg:col-span-1">
      <div class="bg-base-100 rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-bold mb-4">Order Status</h2>
        
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="font-bold">Status</span>
            <div class="badge <%= @order.paid? ? 'badge-success' : @order.pending? ? 'badge-warning' : @order.failed? ? 'badge-error' : 'badge-ghost' %> badge-lg">
              <%= @order.status.upcase %>
            </div>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="font-bold">Order ID</span>
            <span class="font-mono">#<%= @order.id %></span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="font-bold">Total Amount</span>
            <span class="text-2xl font-bold">$<%= @order.total_amount %></span>
          </div>
          
          <% if @order.stripe_payment_intent_id.present? %>
            <div class="flex justify-between items-center">
              <span class="font-bold">Stripe ID</span>
              <span class="font-mono text-sm"><%= truncate(@order.stripe_payment_intent_id, length: 20) %></span>
            </div>
          <% end %>
        </div>

        <!-- Status Change Form -->
        <div class="mt-6 pt-4 border-t">
          <h3 class="font-bold mb-3">Change Status</h3>
          <%= form_with url: admin_order_path(@order), method: :patch, local: true do |form| %>
            <div class="form-control">
              <%= form.select :status, 
                  [
                    ['Pending', 'pending'],
                    ['Paid', 'paid'],
                    ['Failed', 'failed'],
                    ['Cancelled', 'cancelled']
                  ], 
                  { selected: @order.status },
                  { class: "select select-bordered w-full mb-3" } %>
            </div>
            <%= form.submit "Update Status", 
                class: "btn btn-primary w-full",
                data: { confirm: "Are you sure you want to change the order status?" } %>
          <% end %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-base-100 rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Quick Actions</h2>
        <div class="space-y-2">
          <%= link_to admin_book_path(@order.book), class: "btn btn-outline w-full" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
            </svg>
            View Book Details
          <% end %>
          
          <%= link_to book_path(@order.book), target: '_blank', class: "btn btn-outline w-full" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-1M14 6h2a2 2 0 012 2v1M14 6V4a2 2 0 00-2-2H8a2 2 0 00-2 2v2"/>
            </svg>
            View in Store
          <% end %>
          
          <%= link_to "mailto:#{@order.customer_email}?subject=Order ##{@order.id}", class: "btn btn-outline w-full" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            Email Customer
          <% end %>
          
          <%= link_to admin_order_path(@order), 
              method: :delete,
              data: { 
                confirm: "Are you sure you want to delete this order? This action cannot be undone." 
              },
              class: "btn btn-error w-full" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Delete Order
          <% end %>
        </div>
      </div>
    </div>

    <!-- Order Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Customer Information -->
      <div class="bg-base-100 rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Customer Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="label">
              <span class="label-text font-bold">Customer Name</span>
            </label>
            <div class="p-3 bg-base-200 rounded"><%= @order.customer_name %></div>
          </div>
          
          <div>
            <label class="label">
              <span class="label-text font-bold">Email Address</span>
            </label>
            <div class="p-3 bg-base-200 rounded">
              <%= link_to @order.customer_email, 
                  "mailto:#{@order.customer_email}", 
                  class: "text-primary hover:underline" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Book Information -->
      <div class="bg-base-100 rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Book Details</h2>
        <div class="flex gap-6">
          <div class="w-32 h-48 bg-base-200 rounded border flex items-center justify-center flex-shrink-0">
            <%= image_tag @order.book.cover_image_url, alt: @order.book.title, class: "w-full h-full object-cover rounded" %>
          </div>
          
          <div class="flex-1 space-y-4">
            <div>
              <label class="label">
                <span class="label-text font-bold">Title</span>
              </label>
              <h3 class="text-xl font-bold"><%= @order.book.title %></h3>
            </div>
            
            <div>
              <label class="label">
                <span class="label-text font-bold">Author</span>
              </label>
              <p class="text-lg"><%= @order.book.author %></p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label class="label">
                  <span class="label-text font-bold">ISBN</span>
                </label>
                <div class="p-2 bg-base-200 rounded font-mono text-sm">
                  <%= @order.book.isbn.present? ? @order.book.isbn : "N/A" %>
                </div>
              </div>
              
              <div>
                <label class="label">
                  <span class="label-text font-bold">Price</span>
                </label>
                <div class="p-2 bg-base-200 rounded">
                  <span class="text-xl font-bold">$<%= @order.book.price %></span>
                </div>
              </div>
              
              <div>
                <label class="label">
                  <span class="label-text font-bold">Current Stock</span>
                </label>
                <div class="p-2 bg-base-200 rounded">
                  <span class="badge <%= @order.book.stock > 10 ? 'badge-success' : @order.book.stock > 0 ? 'badge-warning' : 'badge-error' %>">
                    <%= @order.book.stock %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Order Timeline -->
      <div class="bg-base-100 rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Order Timeline</h2>
        <div class="space-y-4">
          <div class="flex items-center gap-4">
            <div class="w-3 h-3 bg-primary rounded-full"></div>
            <div>
              <div class="font-bold">Order Created</div>
              <div class="text-sm text-base-content/70">
                <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
            </div>
          </div>
          
          <% if @order.purchased_at %>
            <div class="flex items-center gap-4">
              <div class="w-3 h-3 bg-success rounded-full"></div>
              <div>
                <div class="font-bold">Payment Completed</div>
                <div class="text-sm text-base-content/70">
                  <%= @order.purchased_at.strftime("%B %d, %Y at %I:%M %p") %>
                </div>
              </div>
            </div>
          <% end %>
          
          <% unless @order.paid? %>
            <div class="flex items-center gap-4">
              <div class="w-3 h-3 bg-base-300 rounded-full"></div>
              <div>
                <div class="text-base-content/50">Payment Pending</div>
                <div class="text-sm text-base-content/50">
                  Waiting for payment completion
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <% if @order.book.description.present? %>
        <!-- Book Description -->
        <div class="bg-base-100 rounded-lg shadow p-6">
          <h2 class="text-xl font-bold mb-4">Book Description</h2>
          <div class="prose max-w-none">
            <p class="text-base-content/80 leading-relaxed">
              <%= simple_format(@order.book.description) %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>