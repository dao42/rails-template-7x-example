<% content_for :title, 'Log in' %>

<div class="min-h-screen hero bg-gradient-to-br from-primary to-secondary">
  <div class="hero-content text-center">
    <div class="card w-full max-w-md min-w-96 bg-base-100 shadow-2xl">
      <div class="card-body">
        <!-- Header -->
        <h1 class="text-2xl font-bold mb-6">Admin Login</h1>

        <%= render 'shared/flash_messages' %>

        <%= form_tag admin_login_path do %>
          <div class="space-y-4">
            <!-- Username field -->
            <div class="form-control">
              <label class="label">
                <span class="label-text">Username</span>
              </label>
              <label class="input input-bordered flex items-center gap-2">
                <svg class="w-4 h-4 opacity-70" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"/>
                </svg>
                <%= text_field_tag :name, nil,
                    placeholder: 'Enter your username',
                    class: 'grow' %>
              </label>
            </div>

            <!-- Password field -->
            <div class="form-control">
              <label class="label">
                <span class="label-text">Password</span>
              </label>
              <label class="input input-bordered flex items-center gap-2">
                <svg class="w-4 h-4 opacity-70" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 616 0z" clip-rule="evenodd"/>
                </svg>
                <%= password_field_tag :password, nil,
                    placeholder: 'Enter your password',
                    class: 'grow' %>
              </label>
            </div>
          </div>

          <!-- Submit button -->
          <div class="form-control mt-8">
            <%= submit_tag 'Sign In', class: 'btn btn-primary w-full' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>