<div class="space-y-6">
  <!-- Page Title -->
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold">Dashboard</h1>
    <div class="badge badge-primary">Live</div>
  </div>

  <!-- Stats Overview -->
  <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
    <div class="stat">
      <div class="stat-figure text-primary">
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
        </svg>
      </div>
      <div class="stat-title">Total Administrators</div>
      <div class="stat-value text-primary"><%= @admin_count %></div>
      <div class="stat-desc">
        <div class="badge badge-ghost badge-sm">Active</div>
      </div>
    </div>

    <div class="stat">
      <div class="stat-figure text-secondary">
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 2L3 7v11a1 1 0 001 1h3a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h3a1 1 0 001-1V7l-7-5z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div class="stat-title">Total Orders</div>
      <div class="stat-value text-secondary">0</div>
      <div class="stat-desc">0% from last month</div>
    </div>

    <div class="stat">
      <div class="stat-figure text-success">
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 12a3 3 0 100-6 3 3 0 000 6zm7-3a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      <div class="stat-title">Total Users</div>
      <div class="stat-value text-success">0</div>
      <div class="stat-desc">0% from last month</div>
    </div>

    <div class="stat">
      <div class="stat-figure text-warning">
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
          <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4zM18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"/>
        </svg>
      </div>
      <div class="stat-title">Total Revenue</div>
      <div class="stat-value text-warning">$0</div>
      <div class="stat-desc">$0 (0%)</div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="card bg-gradient-to-br from-primary to-secondary text-primary-content shadow-xl">
      <div class="card-body">
        <h2 class="card-title">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
          </svg>
          Manage Admins
        </h2>
        <p>Add, edit, or remove administrator accounts</p>
        <div class="card-actions justify-end">
          <button class="btn btn-ghost">Manage</button>
        </div>
      </div>
    </div>

    <div class="card bg-gradient-to-br from-secondary to-accent text-secondary-content shadow-xl">
      <div class="card-body">
        <h2 class="card-title">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
          </svg>
          View Reports
        </h2>
        <p>Check analytics and system reports</p>
        <div class="card-actions justify-end">
          <button class="btn btn-ghost">View</button>
        </div>
      </div>
    </div>

    <div class="card bg-gradient-to-br from-accent to-neutral text-accent-content shadow-xl">
      <div class="card-body">
        <h2 class="card-title">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
          </svg>
          Settings
        </h2>
        <p>Configure system settings and preferences</p>
        <div class="card-actions justify-end">
          <button class="btn btn-ghost">Configure</button>
        </div>
      </div>
    </div>
  </div>
</div>