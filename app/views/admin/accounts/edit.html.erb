<% content_for :title do %>
  Account Settings
<% end %>

<!-- Breadcrumb -->
<div class="text-sm breadcrumbs mb-6">
  <ul>
    <li><%= link_to "Dashboard", admin_root_path %></li>
    <li>Account Settings</li>
  </ul>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Personal Information Card -->
  <div class="lg:col-span-2">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-6">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
          </svg>
          Personal Information
        </h2>

        <%= form_with model: current_admin, url: admin_account_path, class: "space-y-6" do |f| %>
          <!-- Name Field -->
          <div class="form-control">
            <%= f.label :name, class: "label" do %>
              <span class="label-text">Full Name <span class="text-error">*</span></span>
            <% end %>
            <%= f.text_field :name, 
                placeholder: "Enter your full name", 
                class: "input input-bordered #{current_admin.errors[:name].any? ? 'input-error' : ''}" %>
            <% if current_admin.errors[:name].any? %>
              <label class="label">
                <span class="label-text-alt text-error">
                  <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <%= current_admin.errors[:name].first %>
                </span>
              </label>
            <% end %>
          </div>

          <!-- Current Password Field -->
          <div class="form-control">
            <%= f.label :current_password, class: "label" do %>
              <span class="label-text">Current Password <span class="text-error">*</span></span>
            <% end %>
            <%= f.password_field :current_password, 
                placeholder: "Enter current password", 
                class: "input input-bordered #{current_admin.errors[:current_password].any? ? 'input-error' : ''}" %>
            <label class="label">
              <span class="label-text-alt">Required for security verification</span>
            </label>
            <% if current_admin.errors[:current_password].any? %>
              <label class="label">
                <span class="label-text-alt text-error">
                  <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <%= current_admin.errors[:current_password].first %>
                </span>
              </label>
            <% end %>
          </div>

          <!-- New Password Field -->
          <div class="form-control">
            <%= f.label :password, class: "label" do %>
              <span class="label-text">New Password</span>
            <% end %>
            <%= f.password_field :password, 
                placeholder: "Enter new password (optional)", 
                class: "input input-bordered #{current_admin.errors[:password].any? ? 'input-error' : ''}" %>
            <label class="label">
              <span class="label-text-alt">Leave blank to keep current password</span>
            </label>
            <% if current_admin.errors[:password].any? %>
              <label class="label">
                <span class="label-text-alt text-error">
                  <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <%= current_admin.errors[:password].first %>
                </span>
              </label>
            <% end %>
          </div>

          <!-- Confirm Password Field -->
          <div class="form-control">
            <%= f.label :password_confirmation, class: "label" do %>
              <span class="label-text">Confirm New Password</span>
            <% end %>
            <%= f.password_field :password_confirmation, 
                placeholder: "Confirm your new password", 
                class: "input input-bordered #{current_admin.errors[:password_confirmation].any? ? 'input-error' : ''}" %>
            <% if current_admin.errors[:password_confirmation].any? %>
              <label class="label">
                <span class="label-text-alt text-error">
                  <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <%= current_admin.errors[:password_confirmation].first %>
                </span>
              </label>
            <% end %>
          </div>

          <!-- Action Buttons -->
          <div class="card-actions justify-end">
            <%= link_to admin_root_path, class: "btn btn-ghost" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Cancel
            <% end %>
            <%= f.submit "Update Account", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Security Information Card -->
  <div>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-xl mb-4">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 616 0z" clip-rule="evenodd"/>
          </svg>
          Security
        </h2>

        <div class="space-y-4">
          <!-- Account Status -->
          <div class="flex items-center p-3 bg-success/10 rounded-lg">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-success" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium">Account Active</p>
              <p class="text-xs text-base-content/70">Your account is active and secure</p>
            </div>
          </div>

          <!-- Last Login -->
          <div class="flex items-center p-3 bg-info/10 rounded-lg">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-info" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium">Last Login</p>
              <p class="text-xs text-base-content/70">Today at <%= Time.current.strftime("%H:%M") %></p>
            </div>
          </div>

          <!-- Security Tip -->
          <div class="flex items-center p-3 bg-warning/10 rounded-lg">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-warning" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium">Security Reminder</p>
              <p class="text-xs text-base-content/70">Update your password regularly</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>