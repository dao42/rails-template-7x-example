<div class="container mx-auto px-4 py-6">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Add New Book</h1>
      <p class="text-base-content/70">Create a new book entry for your store</p>
    </div>
    <%= link_to admin_books_path, class: "btn btn-outline" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back to Books
    <% end %>
  </div>

  <!-- Form -->
  <div class="bg-base-100 rounded-lg shadow p-6">
    <%= form_with model: [:admin, @book], local: true, class: "space-y-6" do |form| %>
      <% if @book.errors.any? %>
        <div class="alert alert-error">
          <div>
            <svg class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-bold">Error!</h3>
              <div class="text-xs">
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Left Column -->
        <div class="space-y-6">
          <!-- Title -->
          <div class="form-control">
            <%= form.label :title, class: "label" do %>
              <span class="label-text font-bold">Title *</span>
            <% end %>
            <%= form.text_field :title, class: "input input-bordered w-full", required: true %>
          </div>

          <!-- Author -->
          <div class="form-control">
            <%= form.label :author, class: "label" do %>
              <span class="label-text font-bold">Author *</span>
            <% end %>
            <%= form.text_field :author, class: "input input-bordered w-full", required: true %>
          </div>

          <!-- ISBN -->
          <div class="form-control">
            <%= form.label :isbn, class: "label" do %>
              <span class="label-text font-bold">ISBN</span>
            <% end %>
            <%= form.text_field :isbn, class: "input input-bordered w-full", placeholder: "978-0-123456-78-9" %>
          </div>

          <!-- Price -->
          <div class="form-control">
            <%= form.label :price, class: "label" do %>
              <span class="label-text font-bold">Price (USD) *</span>
            <% end %>
            <div class="input-group">
              <span class="input-group-text">$</span>
              <%= form.number_field :price, step: 0.01, min: 0, class: "input input-bordered w-full", required: true %>
            </div>
          </div>

          <!-- Stock -->
          <div class="form-control">
            <%= form.label :stock, class: "label" do %>
              <span class="label-text font-bold">Stock Quantity *</span>
            <% end %>
            <%= form.number_field :stock, min: 0, class: "input input-bordered w-full", required: true %>
          </div>
        </div>

        <!-- Right Column -->
        <div class="space-y-6">
          <!-- Cover Image URL -->
          <div class="form-control">
            <%= form.label :cover_image, class: "label" do %>
              <span class="label-text font-bold">Cover Image URL</span>
            <% end %>
            <%= form.url_field :cover_image, class: "input input-bordered w-full", placeholder: "https://images.unsplash.com/..." %>
            <div class="label">
              <span class="label-text-alt">Leave empty to use default placeholder image</span>
            </div>
          </div>

          <!-- Image Preview -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-bold">Preview</span>
            </label>
            <div class="w-32 h-48 bg-base-200 rounded border flex items-center justify-center">
              <% if @book.cover_image.present? %>
                <%= image_tag @book.cover_image, alt: "Cover preview", class: "w-full h-full object-cover rounded" %>
              <% else %>
                <svg class="w-12 h-12 text-base-content/50" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="form-control">
        <%= form.label :description, class: "label" do %>
          <span class="label-text font-bold">Description</span>
        <% end %>
        <%= form.text_area :description, 
            rows: 4,
            class: "textarea textarea-bordered w-full",
            placeholder: "Enter a detailed description of the book..." %>
      </div>

      <!-- Submit Buttons -->
      <div class="flex gap-4 pt-4">
        <%= form.submit "Create Book", class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_books_path, class: "btn btn-outline" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  // Image preview functionality
  document.addEventListener('DOMContentLoaded', function() {
    const imageInput = document.querySelector('#book_cover_image');
    const preview = document.querySelector('.w-32.h-48 img, .w-32.h-48 svg').parentElement;
    
    if (imageInput) {
      imageInput.addEventListener('input', function() {
        const url = this.value;
        if (url) {
          preview.innerHTML = `<img src="${url}" alt="Cover preview" class="w-full h-full object-cover rounded" onerror="this.style.display='none'">`;
        } else {
          preview.innerHTML = `
            <svg class="w-12 h-12 text-base-content/50" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
            </svg>
          `;
        }
      });
    }
  });
</script>