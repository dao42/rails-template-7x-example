<div class="container mx-auto px-4 py-6">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold"><%= @book.title %></h1>
      <p class="text-base-content/70">by <%= @book.author %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_admin_book_path(@book), class: "btn btn-primary" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit Book
      <% end %>
      <%= link_to admin_books_path, class: "btn btn-outline" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Books
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Book Cover -->
    <div class="lg:col-span-1">
      <div class="bg-base-100 rounded-lg shadow p-6">
        <div class="w-full h-96 bg-base-200 rounded border flex items-center justify-center mb-4">
          <%= image_tag @book.cover_image_url, alt: @book.title, class: "w-full h-full object-cover rounded" %>
        </div>
        
        <!-- Quick Actions -->
        <div class="space-y-2">
          <%= link_to book_path(@book), target: '_blank', class: "btn btn-outline w-full" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-1M14 6h2a2 2 0 012 2v1M14 6V4a2 2 0 00-2-2H8a2 2 0 00-2 2v2"/>
            </svg>
            View in Store
          <% end %>
          
          <%= link_to admin_book_path(@book), 
              method: :delete,
              data: { 
                confirm: "Are you sure you want to delete this book? This action cannot be undone." 
              },
              class: "btn btn-error w-full" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Delete Book
          <% end %>
        </div>
      </div>
    </div>

    <!-- Book Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="bg-base-100 rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Basic Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="label">
              <span class="label-text font-bold">Title</span>
            </label>
            <div class="p-3 bg-base-200 rounded"><%= @book.title %></div>
          </div>
          
          <div>
            <label class="label">
              <span class="label-text font-bold">Author</span>
            </label>
            <div class="p-3 bg-base-200 rounded"><%= @book.author %></div>
          </div>
          
          <div>
            <label class="label">
              <span class="label-text font-bold">ISBN</span>
            </label>
            <div class="p-3 bg-base-200 rounded font-mono">
              <%= @book.isbn.present? ? @book.isbn : "Not specified" %>
            </div>
          </div>
          
          <div>
            <label class="label">
              <span class="label-text font-bold">Price</span>
            </label>
            <div class="p-3 bg-base-200 rounded">
              <span class="text-2xl font-bold">$<%= @book.price %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Stock Information -->
      <div class="bg-base-100 rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Stock Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="stat bg-base-200 rounded-lg">
            <div class="stat-title">Current Stock</div>
            <div class="stat-value text-2xl">
              <span class="badge <%= @book.stock > 10 ? 'badge-success' : @book.stock > 0 ? 'badge-warning' : 'badge-error' %> text-lg p-3">
                <%= @book.stock %>
              </span>
            </div>
            <div class="stat-desc">
              <%= @book.available? ? "Available for purchase" : "Out of stock" %>
            </div>
          </div>
          
          <div class="stat bg-base-200 rounded-lg">
            <div class="stat-title">Stock Status</div>
            <div class="stat-value text-lg">
              <%= if @book.stock > 10
                    "Well Stocked"
                  elsif @book.stock > 0
                    "Low Stock"
                  else
                    "Out of Stock"
                  end %>
            </div>
            <div class="stat-desc">
              <%= if @book.stock <= 5 && @book.stock > 0
                    "Consider restocking soon"
                  elsif @book.stock == 0
                    "Restock needed"
                  else
                    "Stock level is good"
                  end %>
            </div>
          </div>
          
          <div class="stat bg-base-200 rounded-lg">
            <div class="stat-title">Total Orders</div>
            <div class="stat-value text-2xl"><%= @book.orders.completed.count %></div>
            <div class="stat-desc">Completed purchases</div>
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="bg-base-100 rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Description</h2>
        <div class="prose max-w-none">
          <% if @book.description.present? %>
            <p class="text-base-content/80 leading-relaxed"><%= simple_format(@book.description) %></p>
          <% else %>
            <p class="text-base-content/50 italic">No description available</p>
          <% end %>
        </div>
      </div>

      <!-- Recent Orders -->
      <div class="bg-base-100 rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Recent Orders</h2>
        <% recent_orders = @book.orders.recent.limit(5) %>
        <% if recent_orders.any? %>
          <div class="overflow-x-auto">
            <table class="table table-zebra w-full">
              <thead>
                <tr>
                  <th>Order ID</th>
                  <th>Customer</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Date</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% recent_orders.each do |order| %>
                  <tr>
                    <td class="font-mono">#<%= order.id %></td>
                    <td>
                      <div class="font-bold"><%= order.customer_name %></div>
                      <div class="text-sm text-base-content/70"><%= order.customer_email %></div>
                    </td>
                    <td class="font-bold">$<%= order.total_amount %></td>
                    <td>
                      <div class="badge <%= order.paid? ? 'badge-success' : order.pending? ? 'badge-warning' : 'badge-error' %>">
                        <%= order.status.upcase %>
                      </div>
                    </td>
                    <td class="text-sm">
                      <%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
                    </td>
                    <td>
                      <%= link_to admin_order_path(order), class: "btn btn-ghost btn-xs" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          
          <div class="flex justify-end mt-4">
            <%= link_to admin_orders_path(search: @book.title), class: "btn btn-outline btn-sm" do %>
              View All Orders for This Book
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8 text-base-content/50">
            <svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
            <p>No orders yet for this book</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>