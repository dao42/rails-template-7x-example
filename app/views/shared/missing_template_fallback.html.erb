<div class="hero min-h-screen bg-base-200">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <!-- Icon -->
      <div class="avatar placeholder mx-auto mb-8">
        <div class="bg-info text-info-content w-24 rounded-full">
          <svg class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
          </svg>
        </div>
      </div>

      <!-- Title -->
      <h1 class="text-5xl font-bold">Page Under Development</h1>
      <p class="py-6">This page is currently being developed. Please check back later!</p>
      
      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to "Back to Home", '/', class: "btn btn-primary" %>
        <button type="button" onclick="developPage()" class="btn btn-outline">
          Develop in Chatbox
        </button>
      </div>

      <!-- Development Info -->
      <div class="mt-8 p-4 bg-base-100 rounded-lg">
        <div class="text-sm opacity-60">
          <p>Generated view template</p>
          <p>Generated at: <%= Time.current.strftime("%Y-%m-%d %H:%M:%S") %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function developPage() {
    const url = window.location.pathname.substring(1);

    if (typeof this.sdk !== 'undefined' && this.sdk.send) {
      this.sdk.send(url);
    } else {
      console.log('SDK not available. Would send URL:', url);
    }
  }
</script>