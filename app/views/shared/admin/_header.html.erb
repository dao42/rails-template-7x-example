          <path d="M3.515 2.1C3.90948 1.70552 4.54264 1.70552 4.93712 2.1L5.64423 2.80711C6.03871 3.20158 6.03871 3.83475 5.64423 4.22923C5.24975 4.6237 4.61659 4.6237 4.22212 4.22923L3.515 3.52212C3.12053 3.12764 3.12053 2.49448 3.515 2.1Z" fill=""/>
          <path d="M10.3558 9.77889C10.7503 9.38441 11.3834 9.38441 11.7779 9.77889L12.485 10.486C12.8795 10.8805 12.8795 11.5136 12.485 11.9081C12.0905 12.3026 11.4574 12.3026 11.0629 11.9081L10.3558 11.201C9.96129 10.8065 9.96129 10.1734 10.3558 9.77889Z" fill=""/>
          <path d="M0 8C0 7.44772 0.447715 7 1 7H2C2.55228 7 3 7.44772 3 8C3 8.55228 2.55228 9 2 9H1C0.447715 9 0 8.55228 0 8Z" fill=""/>
          <path d="M13 8C13 7.44772 13.4477 7 14 7H15C15.5523 7 16 7.44772 16 8C16 8.55228 15.5523 9 15 9H14C13.4477 9 13 8.55228 13 8Z" fill=""/>
          <path d="M2.1 12.485C1.70552 12.0905 1.70552 11.4574 2.1 11.0629L2.80711 10.3558C3.20158 9.96129 3.83475 9.96129 4.22923 10.3558C4.6237 10.7503 4.6237 11.3834 4.22923 11.7779L3.52212 12.485C3.12764 12.8795 2.49448 12.8795 2.1 12.485Z" fill=""/>
          <path d="M9.77889 5.64423C9.38441 6.03871 8.75125 6.03871 8.35677 5.64423C7.9623 5.24975 7.9623 4.61659 8.35677 4.22212L9.06388 3.515C9.45836 3.12053 10.0915 3.12053 10.486 3.515C10.8805 3.90948 10.8805 4.54264 10.486 4.93712L9.77889 5.64423Z" fill=""/>
